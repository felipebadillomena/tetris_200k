{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ compilar proyecto (SDL2)",
            "type": "shell",
            "command": "g++ -fdiagnostics-color=always -g *.cpp -o main $(pkg-config --cflags --libs sdl2 SDL2_image)",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 compilar archivo activo",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ]
}